<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.caraquri.hatamoto.bookmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DebugApp"
        tools:replace="name"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.AccountSettingActivity"
            android:label="@string/title_account_setting" />
        <activity
            android:name=".presentation.LoginActivity"
            android:label="@string/title_login"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".presentation.MainActivity"
            android:label="@string/title_book_list" />
        <activity
            android:name=".presentation.AddBookActivity"
            android:label="@string/title_add_book"/>
        <activity
            android:name=".presentation.EditBookActivity"
            android:label="@string/title_edit_book"/>
    </application>

</manifest>